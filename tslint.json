{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "semicolon": [true, "never"],
    "trailing-comma": [true, {
      "multiline": "always",
      "singleline": "ignore"
    }],
    "interface-over-type-literal": false,
    "no-console": [false]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}